<%= provide(:title, @title ) %>

<div class="row-fluid">
    <div class="col-md-2 col-md-offset-2">
			<section>
				<%= gravatar_for @user %>
				<h1> <%= @user.name %></h1>
				<span><%= link_to "view my profile", @user %></span>
				<span><b>Microposts:</b><%= @user.microposts.count %></span>
			</section>
			<section>
				<%= render 'shared/stats' %>
				<% if @users.any? %>
					<div class="user_avatars">
						<% @users.each do |user| %>
							<%= link_to gravatar_for(user, size: 30), user %>
						<% end %>
					</div>
				<% end %>
			</section>
		</aside>
	</div>

	<div class="col-md-6">
		<h3><%= @title %></h3>
		<% if @users.any?  %>
			<ul class="users">
				<%= render @users %>
			</ul>
			<%= will_paginate renderer: BootstrapPagination::Rails %>
		<% end %>
	</div>
</div>