<% if zubairobject.errors.any? %> 
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(zubairobject.errors.count, "error") %>.
    </div>
    <ul>
    <% zubairobject.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>